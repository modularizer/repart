{
  "name": "repart",
  "version": "1.0.7",
  "description": "A TypeScript library for building complex regular expressions and parsing structured data from text with named groups and custom parsers",
  "main": "dist/index.ts",
  "types": "dist/index.ts",
  "browser": "dist/index.ts",
  "module": "dist/index.ts",
  "exports": {
    ".": {
      "types": "./dist/index.ts",
      "import": "./dist/index.ts",
      "require": "./dist/index.ts",
      "default": "./dist/index.ts"
    },
    "./common": {
      "types": "./dist/common/index.ts",
      "import": "./dist/common/index.ts",
      "require": "./dist/common/index.ts",
      "default": "./dist/common/index.ts"
    },
    "./generic": {
      "types": "./dist/generic/index.ts",
      "import": "./dist/generic/index.ts",
      "require": "./dist/generic/index.ts",
      "default": "./dist/generic/index.ts"
    },
    "./md": {
      "types": "./dist/md/index.ts",
      "import": "./dist/md/index.ts",
      "require": "./dist/md/index.ts",
      "default": "./dist/md/index.ts"
    },
    "./preprocessors": {
      "types": "./dist/preprocessors/index.ts",
      "import": "./dist/preprocessors/index.ts",
      "require": "./dist/preprocessors/index.ts",
      "default": "./dist/preprocessors/index.ts"
    }
  },
  "keywords": [
    "regex",
    "regular-expressions",
    "typescript",
    "parsing",
    "text-processing",
    "named-groups",
    "template-literals"
  ],
  "author": "Torin",
  "license": "Unlicense",
  "files": ["dist"],
  "scripts": {
    "build": "tsc --noEmit && npm run copy-src",
    "copy-src": "powershell -Command \"Remove-Item -Recurse -Force dist -ErrorAction SilentlyContinue; Copy-Item -Path 'src/repart' -Destination 'dist' -Recurse; Get-ChildItem -Path 'dist' -Recurse -Include '*.js', '*.d.ts', '*.map' | Remove-Item -Force\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:core": "jest src/tests/core.test.ts",
    "test:builders": "jest src/tests/builders.test.ts",
    "test:common": "jest src/tests/common.test.ts",
    "test:generic-patterns": "jest src/tests/generic-patterns.test.ts",
    "test:generic-builders": "jest src/tests/generic-builders.test.ts",
    "test:generic-wrappers": "jest src/tests/generic-wrappers.test.ts",
    "test:generic-templates": "jest src/tests/generic-templates.test.ts",
    "test:markdown": "jest src/tests/markdown.test.ts",
    "test:utilities": "jest src/tests/utilities.test.ts",
    "test:complex": "jest src/tests/complex-scenarios.test.ts",
    "test:demo": "jest src/tests/demo.test.ts"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "jest": "^30.2.0",
    "ts-jest": "^29.4.4",
    "typescript": "^5.5.3"
  },
  "private": false
}
